syntax on
filetype plugin indent on

set showtabline=1
set tabstop=4
set softtabstop=4
set shiftwidth=4

set number
set relativenumber

set smartindent
set autoindent

set autochdir
set wrap
set undofile

set smartcase
set ignorecase
set incsearch

set cinoptions=l1
set termguicolors
set scrolloff=10

